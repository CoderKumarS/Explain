<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <div class="button" id="log">
        <button class="btn btn-danger sticky top-4 right-4 w-8"><a href="/logout">Logout</a></button>
        <button class="btn btn-secondary sticky top-4 right-4 w-8"><a href="/chat">Chat</a></button>
    </div>
    <div class="container p-0 w-75">
        <div class="cover">
            <div class="profile-pic">
                <img src="/images/uploads/<%=user.profile%>" alt="Hero Alom">
            </div>
        </div>
        <div class="text-center">
            <a href="/edit"><i class="fa-solid fa-pencil"></i></a>
            <h1>
                <%= user.fullname%>
            </h1>
            <p class="subtitle">
                @<%= user.username%>
            </p>
        </div>
        <div class="main">
            <ul class="tabs">
                <li data-target="intro" class="active">Intro</li>
                <li data-target="project">Projects</li>
                <li data-target="contact">Contact</li>
                <li data-target="posts">Upload</li>
            </ul>
            <div id="intro" class="tab-content active">
                <p>
                    <%= user.bio%>
                </p>
            </div>
        </div>
    </div>

    <div class="container p-0 w-75">
        <div class="row justify-content-center">
            <div id="project" class="tab-content">
                <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
                    <% user.projects.forEach(function (project){%>
                        <div class="col">
                            <div class="card">
                                <img src="/images/uploads/<%=project.image%>" class="card-img-top"
                                    alt="<%=project.projectName%>">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=project.projectName%>
                                    </h5>
                                    <p class="card-text">
                                        <%=project.projectDescription%>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-body-secondary">
                                        <%=project.createdAt%>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <%})%>
                </div>
                <form action="/projectUpload" method="post" enctype="multipart/form-data" class="mt-4">
                    <input type="text" name="projectDescription" placeholder="Description Of the Project.">
                    <input type="text" name="projectName" placeholder="Name Of the Project.">
                    <input type="file" name="projectPic">
                    <button type="submit">Submit</button>
                </form>
            </div>
            <div id="contact" class="tab-content">
                <form action="/">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="ENter your email">
                    <label for="subject">subject</label>
                    <input type="text" id="subject" name="subject" placeholder="Enter subject">
                    <label for="message">message</label>
                    <textarea id="message" name="message" placeholder="message" style="height:150px"></textarea>
                    <button type="submit">Submit</button>
                </form>
            </div>
            <div id="posts" class="tab-content">
                <form action="/upload" method="post">
                    <input type="text" name="topic" placeholder="Topic">
                    <input type="text" name="question" placeholder="Question">
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container p-0 w-75">
        <div class="row m-1 justify-content-center">
            <h5 class="Question">Questions</h5>
            <% user.posts.forEach(function (post){%>
                <div class="card p-0 mb-2">
                    <h5 class="card-header">
                        <%=post.postText%>
                    </h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=post.question%>
                        </h5>
                        <p class="card-text">
                            <%=post.createdAt%>
                        </p>
                        <a href="/chat/" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
                <%})%>
        </div>
    </div>
    <script src="/javascripts/profile.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>